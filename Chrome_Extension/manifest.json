{
    "manifest_version": 2,
    "name": "Chromarly",
    "version": "1.0",
    "background": {
      "scripts": ["background.js", "jquery.min.js"],
      "persistent": true
    },
    "permissions": [
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js", "jquery.min.js"]
      }
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup_folder/index.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "commands": {
      "check-codesmell": {
          "suggested_key": {
              "default": "Alt+Shift+L"
          },
          "description": "Load a random link"
      }
    }
}